{
  "name": "reddhub",
  "private": true,
  "scripts": {
    "lint": "eslint 'app/javascript/**/*.js'",
    "prettier": "prettier -l 'app/javascript/**/*.{js,ts,css,scss,json,md}'",
    "test": "jest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.1.0",
    "@rails/webpacker": "3.4",
    "autosize": "^4.0.1",
    "bootstrap": "^4.1.1",
    "croppie": "^2.6.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "medium-zoom": "^0.4.0",
    "popper.js": "^1.14.3",
    "progressbar.js": "^1.0.1",
    "stimulus": "^1.0.1",
    "ts-loader": "3.5.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.2",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "jest": "^23.2.0",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.6",
    "webpack-dev-server": "2.11.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/app/javascript/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
