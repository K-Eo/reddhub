<div class="col-12">
  <h1 class="mt-5 mb-4">Your stories</h1>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to("Drafts", stories_path,
                            class: active_when(params[:scope] != "public", "nav-link"))%>
    </li>

    <li class="nav-item">
      <%= link_to("Public", stories_path(scope: "public"),
                            class: active_when(params[:scope] == "public", "nav-link"))%>
    </li>
  </ul>

  <div class="mt-3">
    <%= render partial: 'story_small', collection: @stories, as: :story %>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @stories %>
  </div>
</div>
