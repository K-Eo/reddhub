<div class="col-12">
  <h3 class="text-center mb-5 mt-4 font-weight-light">
    Edit my account
  </h3>
</div>

<div class="ml-auto col-5">
  <div class="card">
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, defaults: { required: false }) do |f| %>
        <%= f.input :name,
                    autofocus: true,
                    autocomplete: "name" %>

        <%= f.input :username,
                    autofocus: true,
                    autocomplete: "username",
                    hint: 'Use only letters, numbers and underscore.' %>

        <%= f.input :email, autocomplete: "email" %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-3 text-primary">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.input :password,
                    autocomplete: "off",
                    hint: "#{@minimum_password_length} characters minimum. Leave blank if you don't want to change it." %>

        <%= f.input :password_confirmation, autocomplete: "off" %>


        <%= f.input :current_password,
                    autocomplete: "off",
                    hint: 'We need your current password to confirm your changes.' %>

        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <h5>Unhappy?</h5>

      <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
    </div>
  </div>
</div>

<div class="mr-auto col-5 text-center">
  <div class="avatar-big-wrapper mb-4 d-inline-block border rounded-circle">
    <%= image_tag get_user_avatar(current_user), class: 'rounded-circle img-fluid' %>
  </div>

  <div>
    <label class="btn btn-success">
      Change <input type="file" id="avatar_picker_trigger" hidden accept="image/x-png,image/jpeg" />
    </label>
  </div>
</div>

<div
  class="modal fade"
  id="avatar_picker_modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="avatar_picker_modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div>
          <img id="avatar_preview" src="" class="img-fluid" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="avatar_picker_save">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
