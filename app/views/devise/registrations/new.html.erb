<div class="mx-auto col-5">
  <h3 class="text-center mb-5 mt-4 font-weight-light">Sign up</h3>

  <div class="card">
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.input :email, autofocus: true, autocomplete: "email" %>

        <%= f.input :password, hint: "#{@minimum_password_length} characters minimum.", autocomplete: "off" %>

        <%= f.input :password_confirmation, autocomplete: "off" %>

        <div class="actions">
          <%= f.button :submit, "Sign Up", class: 'btn-success' %>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/links" %>
</div>
