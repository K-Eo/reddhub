<%= render "devise/shared/form", title: "Sign up" do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false }) do |f| %>
    <%= f.input :name,
      autofocus: true,
      autocomplete: "name" %>

    <%= f.input :username,
      autocomplete: "username",
      hint: 'This will be your username. Use only letters, numbers and underscore.' %>

    <%= f.input :email,
      autocomplete: "email",
      hint: "We'll never share your email address with anyone."%>

    <%= f.input :password,
      hint: "#{@minimum_password_length} characters minimum.",
      autocomplete: "off" %>

    <%= f.input :password_confirmation, autocomplete: "off" %>

    <div class="actions">
      <%= f.button :submit, "Sign Up", class: 'btn-success' %>
    </div>
  <% end %>
<% end %>
