<div class="col-12 mt-4"></div>

<div class="col-3">
  <div class="card">
    <%= image_tag @user.avatar, class: "card-img-top" %>

    <div class="card-body">
      <p class="font-weight-bold text-center"><%= @user.name %></p>
      <div class="d-flex text-center justify-content-around">
        <div>
          <div class="text-secondary">
            Followers
          </div>
          <div class="font-weight-bold">
            18
          </div>
        </div>

        <div>
          <div class="text-secondary">
            Following
          </div>
          <div class="font-weight-bold">
            4
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-6">
  <div class="card">
    <% if current_user.present? %>
      <div class="card-body">
        <%= form_for @pod do |f| %>
          <%= f.text_field :content, class: "form-control", placeholder: "Write a message...", aria: { label: "Write a message...", describedby: "Write a message..." } %>
        <% end %>
      </div>
    <% end %>
    <ul class="list-group list-group-flush">
      <%= render @pods %>
    </ul>
  </div>
</div>

<div class="col-3">
  <div class="card">
    <div class="card-body">
      &copy; 2018 ReddHub
      <a href="#">About</a>
      <a href="#">Help</a>
      <a href="#">Terms</a>
      <a href="#">Privacy</a>
    </div>
  </div>
</div>
