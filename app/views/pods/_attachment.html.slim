= form_for PodAttachment.new,
  url: "/",
  data: { "pods--attachments-url" => pod_attachments_path("id"),
          "pods--attachments-no-gif" => "We do not support GIF images",
          "pods--attachments-no-img" => "Ony images cowboy (JPEG, PNG)",
          "pods--attachments-too-big" => "File is too big (Max. 5MB)",
          remote: true,
          controller: "pods--attachments" } do |f|

  = f.label :image, class: "btn btn-secondary mb-0", data: { target: "pods--placeholder.attachments" } do
    = icon "far", "image"
    = f.file_field :image,
      accept: "image/x-png,image/jpeg",
      hidden: true,
      data: { action: "pods--attachments#picked", target: "pods--attachments.source pods--placeholder.media" }

  div class="bg-light rounded text-center text-truncate border mt-3 d-none" data-target="pods--attachments.previews"

